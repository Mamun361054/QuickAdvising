<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#E8EAF6"
    android:layout_marginBottom="10dp"
     android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_vie2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#fff"
        card_view:cardCornerRadius="4dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#535353">

            <TextView
                android:id="@+id/t1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="#003064"
                android:gravity="center"
                android:textSize="20dip"
                android:paddingTop="5dp"
                android:textColor="#ffffff"
                android:text="Subject"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvCLASS"
                android:layout_width="255dp"
                android:layout_height="80dp"
                android:layout_toRightOf="@+id/t1"
                android:background="#535353"
                android:gravity="center"
                android:textSize="20dip"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:text="sub"
                android:textColor="#fff"
                android:textStyle="normal" />

            <ImageButton
                android:id="@+id/imagebut"
                android:layout_width="25dp"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="1dp"
                android:background="@drawable/icora" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_vie3"
        android:orientation="vertical"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/lay2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/t2"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:background="#fff"
                android:gravity="center"
                android:textSize="20dip"
                android:textColor="#117384"
                android:text="Credit"
                android:textStyle="bold"
                />

            <View
                android:layout_width="2dip"
                android:layout_height="fill_parent"
                android:background="#11152e"
                />

            <TextView
                android:id="@+id/t3"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:background="#fff"
                android:gravity="center"
                android:textSize="20dip"
                android:textColor="#117384"
                android:text="Letter Grade"
                android:textStyle="bold"
                />

            <View
                android:layout_width="2dip"
                android:layout_height="fill_parent"
                android:background="#11152e"
                />



            <TextView
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:gravity="center"
                android:textSize="20dip"
                android:textColor="#117384"
                android:text="G.Point"
                android:textStyle="bold"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#11152e" />


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_vie4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/lay3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:background="@drawable/myract"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvCREDIT"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:background="#ffffff"
                android:gravity="center"
                android:textSize="20dip"
                android:text="credit"
                android:textColor="#383333"
                android:textStyle="normal" />

            <View
                android:layout_width="2dip"
                android:layout_height="fill_parent"
                android:background="#11152e"
                />


            <TextView
                android:id="@+id/tvLG"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tvCREDIT"
                android:background="#ffffff"
                android:gravity="center"
                android:textSize="30dip"
                android:text="lg"
                android:textColor="#ff0000"
                android:textStyle="normal" />

            <View
                android:layout_width="2dip"
                android:layout_height="fill_parent"
                android:background="#11152e"
                />


            <TextView
                android:id="@+id/tvGPA"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tvLG"
                android:background="#ffffff"
                android:gravity="center"
                android:textSize="20dip"
                android:text="gpa"
                android:textColor="#383333"
                android:textStyle="normal" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#11152e" />


</LinearLayout>