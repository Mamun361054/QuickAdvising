<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nsu.advising.QuickAdvising.AddResultNineth">
    <LinearLayout
        android:id="@+id/lay11"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:elevation="2dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#0a1960"
            android:gravity="center"
            android:textSize="20dip"
            android:text="Save Nineth Semester"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_below="@+id/layy1"
        android:layout_width="fill_parent"
        android:scrollbars="none"
        android:background="#fefeff"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/educationicon"
                    />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:textSize="20dp"
                        android:inputType="text"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/img5"
                        android:layout_marginLeft="5dp"
                        android:padding="20dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/editTxtSubject"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:hint="Enter Subject Name" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/checkmark"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:textSize="20dp"
                        android:inputType="numberDecimal"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/img6"
                        android:layout_marginLeft="5dp"
                        android:padding="20dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/editTxtCredit"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:hint="Enter Course Credit" />

                </android.support.design.widget.TextInputLayout>



            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="1dp"
                    android:src="@drawable/icn2"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:textSize="20dp"
                        android:inputType="numberDecimal"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/img7"
                        android:layout_marginLeft="5dp"
                        android:padding="20dp"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/editTxtGPA"
                        android:hint="Enter Grade Point"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <Button android:id="@+id/btnButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="SAVE"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/save"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="25dip"
                android:onClick="savedata"
                android:textColor="@android:color/white"/>

            <Button android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Update"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/save"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textSize="25dip"
                android:onClick="updateData"
                android:textColor="@android:color/white"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>