<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ddd"
    android:isScrollContainer="true"
    android:windowSoftInputMode="adjustResize"
    tools:context="com.nsu.advising.QuickAdvising.chat.ChatFragment"
   >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat Room"
        android:textColor="#3f037b"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:background="#06f9c0"
        />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:id="@+id/chat_ScrollView"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:gravity="bottom"
            android:id="@+id/conversation"
            />

    </LinearLayout>
</ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:layout_gravity="bottom"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal"
        android:layout_marginRight="3dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/et_chat"
            android:layout_alignParentBottom="true"
            android:imeOptions="flagNoFullscreen"
            android:isScrollContainer="true"
            android:windowSoftInputMode="adjustPan"
            android:background="@drawable/edit_text_background_3"
            android:layout_marginBottom="15dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="sent"
            android:textSize="20dp"
            android:textColor="#eef522"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:id="@+id/btn_sent"
            android:background="@drawable/chat_button"
            android:layout_marginBottom="15dp"
            />
    </LinearLayout>

</LinearLayout>